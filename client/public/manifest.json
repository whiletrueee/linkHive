{
  "name": "Link Hive",
  "version": "1.0.0",
  "description": "Link Hive, the easiest way to share an URL.",
  "manifest_version": 3,
  "action": {
    "default_title": "Click to share link",
    "default_popup": "index.html"
  },
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "/icon_4.png",
    "32": "/icon_3.png",
    "48": "/icon_2.png",
    "128": "/icon_1.png"
  }
}
